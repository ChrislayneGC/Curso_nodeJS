{{!-- REGISTRAR USUÁRIO --}}

<div class="auth-container">
    <h2>Registrar</h2>
    <form action="/register" method="POST">

        {{!-- NOME --}}
        <div class="form-control">
            <label for="text">Nome:</label>
            <input type="name" name="name" placeholder="Digite o seu nome" required>{{!-- REQUIRED = Usuário é obrigada a por o nome --}}
            
        </div>

        {{!-- EMAIL --}}
        <div class="form-control">
            <label for="email">E-mail:</label>
            <input type="email" name="email" placeholder="Digite o seu e-mail" required>{{!-- REQUIRED = Usuário é obrigada a por o nome --}}
        </div>

        {{!-- SENHA --}}
        <div class="form-control">
            <label for="password">Senha:</label>
            <input type="password" name="password" placeholder="Digite a sua senha" required>{{!-- REQUIRED = Usuário é obrigada a por o nome --}}
        </div>

        {{!-- CONFIRMACÃO DE SENHA --}}
        <div class="form-control">
            <label for="confirmpassword">Confirmação de senha:</label>
            <input type="password" name="confirmpassword" placeholder="Confirme a sua senha" required>{{!-- REQUIRED = Usuário é obrigada a por o nome --}}
        </div>

        {{!-- FAZER O ENVIO DO CADASTRO--}}
        <input type="submit" value="Cadastrar">
        <p>Já tem conta? <a href="/login">Clique aqui</a></p>
    </form>
</div>